<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- SCRIPT DE LA BARRA DE BUSQUEDA -->
    @*<script src="~/Scripts/jquery-2.1.4.min.js" type="text/javascript"></script>*@
    <script src="http://code.jquery.com/jquery-2.1.4.min.js" type="text/javascript"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            (function ($) {
                $('#filtrar').keyup(function () {
                    var rex = new RegExp($(this).val(), 'i');
                    $('.buscar tr').hide();
                    $('.buscar tr').filter(function () {
                        return rex.test($(this).text());
                    }).show();
                })
            }(jQuery));
        });
    </script>

    <script type="text/javascript">
        $(function () {
            $(window).load(function () {
                $(':input:visible:enabled:first').focus();
            });
        })
    </script>

</head>


<body>
    <header>
        <div class="container">

            <a href="http://intranet.senaf.gob.ar/" target="_blank">
                <img src="~/Img/Logo-SENNAF.png" alt="Logo SENNAF" />
            </a>

            <a href="https://www.argentina.gob.ar/desarrollosocial" target="_blank" style="float: right;">
                <img src="~/Img/Logo-ministerio-2018.png" alt="Logo Ministerio" />
            </a>

        </div>
    </header>

    <div class="navbar navbar-default">
        <div class="container">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Internos SENNAF", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li>
                        <!-- barra de busqueda -->
                        <div class="navbar-form " role="search">
                            <div class="input-group">
                                <span class="input-group-addon">Buscar</span>
                                <input id="filtrar" type="text" class="form-control" autofocus placeholder="Ingrese lo que busca..." value="">
                            </div>
                        </div>
                    </li>

                    @if (User.IsInRole("administrador"))
                    {

                        <li>@Html.ActionLink("Internos", "Index", "Interno", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Sectores", "Index", "Sector")</li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                Otros <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Areas", "Index", "Area")</li>
                                <li>@Html.ActionLink("Dependencias", "Index", "Dependencia")</li>
                                <li>@Html.ActionLink("Pisos", "Index", "Piso")</li>
                                <li>@Html.ActionLink("Puestos", "Index", "Puesto")</li>
                                <li>@Html.ActionLink("API Help", "Index", "Help", new { area = "" }, null)</li>
                            </ul>
                        </li>

                    }

                    </ul>

                @Html.Partial("_LoginPartial")

                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @(User.IsInRole("administrador") ? @Html.ActionLink("Sugerencias", "Index", "Contacto") : @Html.ActionLink("Enviar Sugerencia", "Contacto", "Contacto"))
                    </li>
                </ul>

            </div>

        </div>
    </div>



    <div class="container body-content">
        @RenderBody()
        @*<hr />
            <footer class="text-center">
                <p>&copy; @DateTime.Now.Year - Realizado en ASP.NET</p>
            </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryunobtrusive")
    @RenderSection("scripts", required: false)


</body>
</html>


